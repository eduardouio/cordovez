</form>

<script type="text/javascript">
	$('#por_fechas').click(function(){
		if($('#por_fechas').is(':checked')){
			desactivarTodo();
			activafFechas();
			$('#por_pedido').prop('checked', false);
		}
	});

	$('#por_pedido').click(function(){
		if($('#por_pedido').is(':checked')){
			desactivarTodo();
			activarPedido();
			$('#por_fechas').prop('checked', false);
		}
	});

	function activafFechas(){
		$('#fecha_desde').prop('disabled', false);
		$('#fecha_hasta').prop('disabled', false);
	}

	function activarPedido(){
		$('#nro_pedido').prop('disabled', false);
	}


	function desactivarTodo(){
		$('#fecha_desde').prop('disabled', true);
		$('#fecha_hasta').prop('disabled', true);
		$('#nro_pedido').prop('disabled', true);
	}
</script>