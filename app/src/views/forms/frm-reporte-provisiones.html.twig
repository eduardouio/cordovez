<form action="" method="POST">
<div class="row">
	<div class="col-md-2">
		<label class="control control-checkbox">
                  Por Pedido
                  <input 
                  type="checkbox" 
                  value="por_pedido" 
                  id="por_pedido" 
                  name="por_pedido"
                  >
                  <div class="control_indicator"></div>
               </label>
	</div>
	<div class="col-md-2">
		<label class="control control-checkbox">
                  Por Fechas
                  <input 
                  type="checkbox" 
                  value="por_fechas" 
                  id="por_fechas" 
                  name="por_fechas"
                  >
                  <div class="control_indicator"></div>
               </label>
	</div>
	<div class="col-md-2" id="pedido">
			<div class="form-group">
            <select name="nro_pedido" id="nro_pedido" class="form-control" disabled="" required="">
            	<option selected="" disabled="">Seleccione...</option>
            	{% for order in orders_list %}
					<option value="{{order.nro_pedido}}">{{order.nro_pedido}}</option>
            	{% endfor %}
            </select>
         </div>
	</div>
	<div class="col-md-2" id="fechas">
		<div class="form-group">
        <div class="input-group">
            <input 
            type="text" 
            class="form-control fecha" 
            id="fecha_desde" 
            required="required" 
            name="fecha_desde" 
            placeholder="Fecha Desde"
            disabled="" 
            >
            <div class="input-group-addon">
            </div>
         </div>
      </div>
  </div>
  <div class="col-md-2" id="fechas">
      		<div class="form-group">
        <div class="input-group">
            <input 
            type="text" 
            class="form-control fecha" 
            id="fecha_hasta" 
            required="required" 
            name="fecha_hasta"  
            placeholder="Fecha Hasta"
            disabled="" 
            >
            <div class="input-group-addon">
            </div>
         </div>
      </div>
	</div>
	<div class="col-md-2">
		<button type="submit" class="btn btn-primary btn-sm">
			<span class="fa fa-cog"></span>
			Generar Reporte
		</button>
	</div>
</div>
