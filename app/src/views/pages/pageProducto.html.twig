			<pre>
				{{ dump(data) }}
			</pre>
		
		<p>
			{% if deleted == true %} 
						<a href="{{rute_url}}producto/presentar/{{orderDetail}}"> 
				<button>
					<span class="fa fa-list"></span>
					Ver
				</button>
				</a>
			{% else %}  
				<a href="{{rute_url}}producto/presentar/{{orderDetail}}">
		<button>
			<span class="fa fa-eye"></span>
			Ver
		</button>
		</a>
			{% endif %}
		
		</p>
	</div>
{% endif %}


