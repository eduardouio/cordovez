{% include 'base/header.html.twig' %}
{% include 'base/navbarheader.html.twig' %}
{% include 'base/content.html.twig' %}
{% if viewMessage == true %}
<div class="well">
   <h3 class="text-primary">	{{message}} </h3>
   <br><br>
   <p>
      {% if(errorList.status == false) %}
      <p>
      Estos Campos tienen la longitud incorrecta
      <ul>
      {% for column in errorList.len %}
      <li> {{ column }} </li>	
      {% endfor %}
      </ul>
      </p>
      <p>
            Estos Campos Deben tener un valor registrado
      <ul>
      {% for column in errorList.columns %}
      <li> {{ column }} </li>	
      {% endfor %}
      </ul>
      </p>     
      {% endif %}
      {% if deleted == true %} 
      <a href="{{rute_url}}producto/listar/"> 
      <button>
      <span class="fa fa-list"></span>
       Volver a la lista
      </button>
      </a>
      {% elseif (deleted == false) %}  
      <a href="{{rute_url}}producto/presentar/{{idProduct}}">
      <button>
      <span class="fa fa-eye"></span>
      Ver producto
      </button>
      </a>
      {% endif %}
   </p>
</div>
{% endif %}
{% if show == true %}
{% include 'sections/mostrar-producto.html.twig' %}	
{% endif %}
{% if list == true %}
{% include 'sections/listar-producto.html.twig' %}	
{% endif %}
{% if create == true %}
{% include 'forms/frm_producto.html.twig' %}	
{% endif %}
{% if edit == true %}
{% include 'forms/frm_producto.html.twig' %}	
{% endif %}
