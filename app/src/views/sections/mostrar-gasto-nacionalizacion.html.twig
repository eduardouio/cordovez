<div class="proveedor">
  <br>
  <div class="row">
    <div class="table-responsive">
      <table class="table table-hover table-bordered table-striped">
        <thead>
          <tr style="background-color: #c1c1c1;">
            <th>Nombre</th>
            <th>Valor</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="text-right"> <b>ID:</b></td>
            <td>{{ initExpense.id_gastos_nacionalizacion }}</td>
          </tr>
          {% if initExpense.nro_pedido == '000-00' %}
          <tr>
            <td class="text-right"> <b>Pedido:</b></td>
            <td> 
              <a href="{{rute_url}}pedido/presentar/{{ order.nro_pedido }}">
                <span class="label label-primary">
            {{ order.nro_pedido }} 
          </span>
            </a>
          </td>
          </tr>
          {% else %}
              <tr>
            <td class="text-right"> <b>Pedido:</b></td>
            <td> 
              <a href="{{ rute_url }}pedido/presentar/{{ initExpense.nro_pedido }}">
                <span class="label label-primary">
            {{ initExpense.nro_pedido }} 
                </span>
            </a>
          </td>
          </tr>
          {% endif %}

          {% if initExpense.id_parcial != 0 %}
            <tr>
            <td class="text-right"> <b>Parcial:</b></td>
            <td> 
              <a href="{{rute_url}}parcial/presentar/{{ initExpense.id_parcial }}">
            {{ initExpense.id_parcial }} 
            </a>
            </td>
          </tr>
          {% endif %}
          <tr>
            <td class="text-right"><b>ID Proveedor:</b></td>
            <td>{{ supplier.identificacion_proveedor }}</td>
          </tr>
          <tr>           
            <td class="text-right"><b>Nombre Proveedor:</b></td>
            <td>{{supplier.nombre}}</td>
          </tr>
          <tr>
            <td class="text-right"> <b>Tipo Proveedor:</b></td>
            <td> {{supplier.tipo_provedor}} </td>
          </tr>
          <tr>
            <td class="text-right"> <b>Fecha:</b></td>
            <td>
              {% if initExpense.fecha != null %}
                {{ initExpense.fecha | date('d/m/Y') }}
              {% endif %}
          </td>
          </tr>         
          <tr>
            <td class="text-right"> <b>Fecha Fin:</b></td>
            <td>
              {% if initExpense.fecha_fin != null %}
                {{ initExpense.fecha_fin | date('d/m/Y') }}
              {% endif %}
          </td>
          </tr>          
          <tr>
            <td class="text-right"> <b>Concepto:</b></td>
            <td> {{ initExpense.concepto | raw }}</td>
          </tr>
          <tr>
            <td class="text-right"> <b>Valor Provisionado:</b></td>
            <td> {{ initExpense.valor_provisionado }} </td>
          </tr>
          <tr>
            <td class="text-right"> <b>Comentarios:</b></td>
            <td> {{ initExpense.comentarios }} </td>
          </tr>
          <tr>
            <td class="text-right"> <b>Tipo Gasto:</b></td>
            <td> {{ initExpense.tipo }} </td>
          </tr>
          <tr>
            <td class="text-right"> <b>Status:</b></td>
            <td> 
              {% if initExpense.bg_closed == 0 %}
                <span class="label label-warning"> 
                Provisión Sin Justificar 
              </span>
              {% else %}
                <span class="label label-success">
                Provisión Justificada 
                 </span>
              {% endif %}              
            </td>
          </tr>
          <tr>
            <td class="text-right"> <b>Creado El:</b></td>
            <td> 
              {% if initExpense.date_create != null %}
                  {{ initExpense.date_create | date('d/m/Y H:m') }} 
              {% endif %}
              
          </td>
          </tr>
          <tr>
            <td class="text-right"> <b>Ultima Actualización:</b></td>
            <td> 
              {% if initExpense.last_update != null %}
                  {{ initExpense.last_update | date('d/m/Y H:m') }} 
              {% endif %}
              
          </td>
          </tr>
          <tr>
            <td class="text-right"> <b>Creado Por:</b></td>
            <td> {{ user.nombres }} </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-7">
      <a href="{{rute_url}}parcial/presentar/{{infoInvoice.id_factura_informativa}}" class="btn btn-default btn-sm">
      <span class="fa fa-arrow-left fa-fw"></span>  Volver al Parcial {{infoInvoice.nro_factura_informativa}}
    </a>
      <a href="{{rute_url}}gstnacionalizacion/editar/{{initExpense.id_gastos_nacionalizacion}}" class="btn btn-default btn-sm">
      <span class="fa fa-pencil fa-fw"></span>  Editar Gasto Nacionalizacion
    </a>
      <a href="{{rute_url}}gstnacionalizacion/eliminar/{{initExpense.id_gastos_nacionalizacion}}" class="btn btn-danger btn-sm">
      <span class="fa fa-trash fa-fw"></span>  Eliminar Gasto Nacionaliazacion
    </a>
    </div>
  </div>
</div>