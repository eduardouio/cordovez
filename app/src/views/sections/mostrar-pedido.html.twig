{% set fob = (order.valuesOrder.valInvoices) + (order.valuesOrder.originExpenses * order.valuesOrder.multiple) %}
{% set cif = (fob + order.valuesOrder.valSecureExpense + order.valuesOrder.valSecureExpense + order.valuesOrder.valShipExpnese)  %}
{% set nacionalizado = 0 %}

{% if order.bg_isclosed == 1 %}
	{% set nacionalizado = fob %}
{% endif %}

{% if order.regimen == 70  %}
	{% set nacionalizado = order.valuesOrder.infoInvoices  %}
{% endif %}

<div class="well well-sm">
   <div class="row">
      <div class="col-sm-3">
         <strong>Valor FOB Total:</strong> 
         <span class="text-primary">
         <strong>
         $ {{fob | number_format(2, '.', ',') }}      
         </strong>
         </span>  
      </div>
      <div class="col-sm-3">
         <strong>
         FOB Nacionalizado:</strong> 
         <span class="text-primary">
         <strong>
         $ {{ nacionalizado | number_format(2, '.', ',') }}      
         </strong>
         </span>
      </div>
      <div class="col-sm-3">
         <strong>
         Valor FOB Saldo:</strong> 
         <span class="text-primary">
         <strong>
			${{ (fob - nacionalizado) | number_format(2, '.', ',') }}      
         </strong>
         </span>
      </div>
      <div class="col-sm-3">
         <strong>
         CIF Total:</strong>
         <span class="text-primary">   
         {{ cif |  number_format(2, '.', ',') }}
         </span>
      </div>
   </div>
   <div class="row">
      <div class="col-sm-3">
         <strong>Tiempo Bodega:</strong> 
        <span>{{ warenHouseDays }} d&iacute;as</span>
      </div>
      <div class="col-sm-2">
         <strong>Provisiones:</strong> 
         <span class="text-warning">
         {{ order.valuesOrder.localExpenses | number_format(0, '.', ',') }}
         </span>
      </div>
      <div class="col-sm-2">
         <strong>Consolidado:</strong> 
         <span class="text-primary">
         {{ order.valuesOrder.localPaidsExpenses | number_format(0, '.', ',') }}
         </span>
      </div>
      <div class="col-sm-2">
         <strong>Saldo:</strong> 
         <span class="text-danger" style="font-weight: bold;">
         {{ (order.valuesOrder.localExpenses - order.valuesOrder.localPaidsExpenses) | number_format(0, '.', ',') }}
         </span>
      </div>
      <div class="col-sm-3">
         <strong>Puerto:</strong> <span> {{order.ciudad_origen}} / {{ order.pais_origen }} </span>
      </div>
   </div>
</div>

