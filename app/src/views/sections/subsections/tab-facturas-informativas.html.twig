<div class="row">
    <div class="col-sm-3">
    {% if order_report.have_open_parcial == false %}
            <a href="{{ rute_url }}parcial/nuevo/{{ order.nro_pedido }}">
                <button type="button" class="btn btn-primary btn-sm">
                    <span class="fa fa-list-ol"></span>
                    Nuevo Parcial
                </button>
            </a>
            <br>
            <br>
            {% endif %}
    </div>
</div>

<div class="row">
    <div class="col-sm-1">&nbsp;</div>
    <div class="col-sm-10">
        <table class="table table-hover table-bordered table-striped text-right">
            <thead>
            <tr style="background-color: #c1c1c1;">
                <th>Parcial</th>
                <th>Estado</th>
                <th>Pedido</th>
                <th>FOB</th>
                <th>Fact Informativa</th>
                <th>Fecha</th>
                <th>Cajas</th>                  
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% for parcial in parcials %}
                <tr>
                    <td>
                    <a href="{{ rute_url }}gstnacionalizacion/parcial/{{ parcial.id_parcial }}">
                    {{ loop.index }}
                    <span class="fa fa-eye"></span> Ver                    
                    </a>
                    </td>
                    <td>
                      <small>
                    {%  if parcial.bg_isclosed == 0 and parcial.bg_isliquidated == 0 %}
                    	<span class="text-success"> Abierto
                    	<span class="fa fa-folder-open-o"></span> 
                    	<span class="fa fa-unlock"></span>
                    	</span>
                    {%  endif %}
                    
                    {%  if parcial.bg_isclosed == 1 %}
                    	<span class="text-default">
                    	Liquidado y Cerrado
                    	<span class="fa fa-folder-close-o"></span>
                    	<span class="fa fa-lock"></span>
                    	</span>
                    {%  endif %}
                    
                      {%  if parcial.bg_isclosed == 0 and parcial.bg_isliquidated == 1 %}
                    	<span class="text-success"> Abierto Liquidacion Aduana Ingresada
                    	<span class="fa fa-folder-open-o"></span> 
                    	<span class="fa fa-lock"></span>
                    		</span>
                    {%  endif %}
                    		</small>
                   
                    </td>
                    <td>
                    {{ parcial.nro_pedido }}
                    </td>
                    <td> {{ parcial.value | number_format('2',',','.') }} </td>
                    <td> {{ parcial.factura_informativa }} </td>
                    <td> {{ parcial.fecha_factura_informativa | date ('d/m/Y') }} </td>
                    <td> {{ parcial.cajas }} </td>
                    
                    <td>
                        <div class="dropdown">
                            <button id="dLabel" type="button"
                                    data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="true"
                                    class="btn btn-sm btn-default">
                                <span class="fa fa-chevron-down"></span>
                                Acciones <span class="fa fa-list"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dLabel">
                                <li>
                                    <a href="{{ rute_url }}parcial/presentar/{{ parcial.id_parcial }}">
                                        <span class="fa fa-eye fa-fw"></span>
                                        Ver Detalle Parcial</a>
                                </li>
                                {%  if invoice.bg_isclosed == 0 %}                          
                                <li>
                                    <a href="{{ rute_url }}parcial/eliminar/{{ parcial.id_parcial }}">
                                        <span class="fa fa-trash fa-fw"></span>
                                        Eliminar Parcial</a>
                                </li>
                                <li>
                                  <a href="{{ rute_url }}report/gastosnacionalizacion/{{ parcial.id_parcial }}" target="_blank">
     								<span class="fa fa-file-o"></span> 
     								Reporte GP
      							</a>
                                </li>
                                {%  endif %}
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="col-sm-1">&nbsp;</div>
</div>
