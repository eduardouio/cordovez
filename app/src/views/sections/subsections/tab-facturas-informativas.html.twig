{% set newParcial = true %}

{% for parcial in parcials %}
	{% if parcial.bg_isclosed == 0 %}
		{% set newParcial = false %}		
	{% endif %}	
{% endfor %}

<div class="row">
    <div class="col-sm-3">
        {% if newParcial == true %}
            <a href="{{ rute_url }}parcial/nuevo/{{ order.nro_pedido }}">
                <button type="button" class="btn btn-primary btn-sm">
                    <span class="fa fa-plus"></span>
                    Nuevo Parcial Pedido
                </button>
            </a>
            <br>
            <br>
        {% endif %}
    </div>
    <div class="col-sm-3">&nbsp;</div>
    <div class="col-sm-2">
        <h5 class="text-primary">
            <small>Parciales:</small>
            <span id="suma"> {{ count | number_format(0, '.', ',') }} </span></h5>
    </div>
    <div class="col-sm-2">
        <h5 class="text-primary">
            <small>Sumas:</small>
            <span id="suma">
                        $ {{ 0 | number_format(2, '.', ',') }}</span></h5>
    </div>
    <div class="col-sm-2">
        <h5 class="text-danger">
            <small>Saldo:</small>
            <span id="suma"> $ {{ saldo | number_format(2, '.', ',') }}
                  </span></h5>
    </div>
</div>


<div class="row">
    <div class="col-sm-1">&nbsp;</div>
    <div class="col-sm-10">
        <table class="table table-hover table-bordered table-striped">
            <thead>
            <tr style="background-color: #c1c1c1;">
                <th>Parcial</th>
                <th>Pedido</th>
                <th>Responsable</th>
                <th>Fecha</th>
                <th>Fac Inf</th>
                <th>Cajas</th>
                <th>Unidades</th>
                <th>Valor</th>               
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% for parcial in parcials %}
                <tr>
                    <td>
                    <a href="{{ rute_url }}parcial/presentar/{{ parcial.id_parcial }}">
                    {{ loop.index }}
                    <span class="fa fa-eye"></span>
                    {%  if parcial.is_closed == 0 %}
                    	<label class="label label-success">Abierto</label>
                    	{% set newParcial = false %}
                    {%  else %}
                    	<label class="label label-inverse">Cerrado</label>
                    {%  endif %}
                    </a>
                    </td>
                    <td>
                    {{ parcial.nro_pedido }}
                    </td>
                    <td> {{ parcial.user.nombres }} </td>
                    <td> {{ parcial.fecha | date ('d/m/Y') }} </td>
                    <td> {{ parcial.countInfoInvoices }} </td>
                    <td> {{ parcial.boxesInParcial }} </td>
                    <td> {{ parcial.unitiesInParcial }} </td>
                    <td> {{ parcial.totalParcialValue | number_format('2',',','.') }} </td>
                    
                    <td>
                        <div class="dropdown">
                            <button id="dLabel" type="button"
                                    data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="true"
                                    class="btn btn-sm btn-default">
                                <span class="fa fa-chevron-down"></span>
                                Acciones <span class="fa fa-list"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dLabel">
                                <li>
                                    <a href="{{ rute_url }}parcial/presentar/{{ parcial.id_parcial }}">
                                        <span class="fa fa-eye fa-fw"></span>
                                        Ver Detalle Parcial</a>
                                </li>
                                {%  if invoice.bg_isclosed == 0 %}
                                <li>
                                    <a href="{{ rute_url }}facinformativa/nuevo/{{ parcial.id_parcial }}">
                                        <span class="fa fa-plus fa-fw"></span>
                                        AÃ±adir Factura Informativa</a>
                                </li>
                                <li>
                                    <a href="{{ rute_url }}parcial/eliminar/{{ parcial.id_parcial }}">
                                        <span class="fa fa-trash fa-fw"></span>
                                        Eliminar Parcial</a>
                                </li>
                                {%  endif %}
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="col-sm-1">&nbsp;</div>
</div>
