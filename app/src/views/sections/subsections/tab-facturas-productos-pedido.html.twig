<div class="row">
	<div class="col-sm-6">
		{% if order.bg_isclosed == 0 %}
		<a href="{{rute_url}}pedidofactura/nuevo/{{ order.nro_pedido }}">
			<button class="btn btn-sm btn-primary">
				<span class="fa fa-plus fa-fw"> </span> Agregar Factura Provedor Exterior
			</button>
		</a>
		{% endif %}
	</div>
	<div class="col-sm-2">
		<h4 class="text-primary">
			<small>Cajas Pedido: </small> <span id="suma"> {{ boxesOrder.boxesImported | number_format(0, '.', ',') }}
			</span>
		</h4>
	</div>
	<div class="col-sm-2">
		<h4 class="text-primary">
			<small>Cajas Nacionalizadas: </small> <span id="suma"> {{ simbolo | raw}}
				{{ boxesOrder.boxesNationalized  | number_format(0, '.', ',')}}</span>
		</h4>
	</div>
	<div class="col-sm-2">
		<h4 class="text-danger">
			<small>Cajas Stock: </small> <span id="suma"> {% set stock = boxesOrder.boxesImported - boxesOrder.boxesNationalized %}
				{{ stock }}
			</span>
		</h4>
	</div>
</div>
<br>
<div class="row">
	<div class="col-sm-12">
		<table class="table table-hover table-bordered table-striped">
			<thead>
				<tr style="background-color: #c1c1c1;">
					<th>#</th>
					<th>Nro Factura</th>
					<th>F Emision</th>
					<th>F Vencimiento</th>
					<th>F Pago</th>
					<th>Moneda</th>
					<th>Valor</th>
					<th>Retirado</th>
					<th>Saldo</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				{% for orderInvoice in orderInvoices %}
				<tr>
					<td>{{loop.index}}</td>

					<td><span class="fa fa-eye fa-fw"></span> <a
						href="{{rute_url}}pedidofactura/presentar/{{orderInvoice.id_pedido_factura}}">
							<small style="font-size: xx-small;">{{ orderInvoice.supplier.nombre | slice(0,18)}}</small>...
							 &nbsp;F[{{orderInvoice.id_factura_proveedor}}]
					</a>
				</td>
					<td class="text-right">{{orderInvoice.fecha_emision}}</td>
					<td class="text-right">{{orderInvoice.vencimiento_pago}}</td>
					<td class="text-right">{{orderInvoice.fecha_pago}}</td>
					<td class="text-right">{{orderInvoice.moneda}}</td>
					<td class="text-right">{{orderInvoice.valor | number_format(2, '.', ',') }}</td>
					{% if (order.bg_isclosed) == 1 %}
						{% set nacionalizado = orderInvoice.valor %}					
				    {% endif %}
				    {# calculamos el saldo de la factura #}
				    {% set nacionalizado = 0 %}
				    {% for item in activeStok %}
				    	{% if (item.id_pedido_factura == orderInvoice.id_pedido_factura)  %}
				    		{% set nacionalizado = nacionalizado + ( item.stock * item.costo_caja ) %}
				    	{% endif %}
				    {% endfor %}

					<td class="text-right">{{nacionalizado | number_format(2, '.', ',') }}</td>

					<td class="text-right"> <strong>{{(orderInvoice.valor - nacionalizado) | number_format(2, '.', ',') }} </strong></td>
					<td>
						<div class="dropdown">
							<button class="btn btn-sm btn-default" id="dLabel" type="button"
								data-toggle="dropdown" aria-haspopup="true"
								aria-expanded="false">
								Acciones <span class="fa fa-list fa-fw"></span> <span
									class="caret"></span>
							</button>
							<ul class="dropdown-menu" aria-labelledby="dLabel">
								<li><a
									href="{{rute_url}}pedidofactura/presentar/{{orderInvoice.id_pedido_factura}}">
										<span class="fa fa-eye fa-fw"></span> Ver Productos
								</a></li>
								{% if order.bg_isclosed == 0 %}
								<li><a
									href="{{rute_url}}detallepedido/nuevo/{{orderInvoice.id_pedido_factura}}">
										<span class="fa fa-cube fa-fw"></span> Agregar Item Producto
								</a></li>
								<li><a
									href="{{rute_url}}pedidofactura/editar/{{orderInvoice.id_pedido_factura}}">
										<span class="fa fa-pencil fa-fw"></span> Editar Factura
								</a></li>
								<li><a
									href="{{rute_url}}pedidofactura/eliminar/{{orderInvoice.id_pedido_factura}}">
										<span class="text-danger fa fa-trash fa-fw"></span> Elminar
										Factura
								</a></li>
								{% endif %}
							</ul>
						</div>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
