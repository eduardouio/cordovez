            <div class="col-sm-2">
               <h5 class="text-primary"> <small>Provisionado: </small> <span id="suma"> $ {{ provisionado | number_format(2, '.', ',')}}</span></h5>
            </div>
            <div class="col-sm-2">
               <h5 class="text-danger"> <small>Convalidado: </small> <span id="suma"> $ {{ Convalidado | number_format(2, '.', ',') }} </span></h5>
