<div class="text-tittle">Provisiones Aplicables Al Parcial</div>
<form action="{{rute_url}}gstnacionalizacion/putExpenses/" method="post">
   <input type="hidden" name="id_factura_informativa" value="{{infoInvoice.id_factura_informativa}}">
   <table class="table  table-hover table-condensed table-striped">
      <thead>
         <tr>
            <th>#</th>
            <th>Concepto</th>
            <th>Valor</th>
            <th>Seleccionar</th>
         </tr>
      </thead>
      <tbody>
      {% for rateExpense in rateExpenses %}
         <tr>
            <td>{{loop.index}}</td>
            <td>{{rateExpense.concepto | raw }}</td>
            <td>{{rateExpense.valor |number_format(2, '.', ',') }}</td>
            <td class="text-center">
               <input
                  type="radio" 
                  name="{{ rateExpense.concepto | replace({' ':''})}}" 
                  value="{{rateExpense.id_tarifa_gastos}}"
                  id= 'cehck{{loop.index}}'
                  onclick = "test('cehck{{loop.index}}')"
                  >
            </td>
         </tr>
         {% endfor %}
      </tbody>
   </table>
   <button
      type= "submit"
      class="btn btn-default btn-sm"
      >
   <span class="fa fa-warning fa-fw"></span>
   Aplicar Gastos Al Parcial
   </button>
   <a href="{{rute_url}}gstnacionalizacion/validarbodegaparcial/{{ infoInvoice.id_factura_informativa }}" class="pull-right btn btn-sm btn-default">
   <span class="fa fa-home"></span>
   <span class="text-primary">Provisi√≥n Alamcenaje Parcial </span>
   </a>
   <br>
   <br>
</form>
<script type="text/javascript">
   var radioState = false;
   function test(element){
      if(radioState == false){
         check(element);
         radioState = true;
      }else{
         uncheck(element);
         radioState = false;
      }
   }
   
   /**
   * Marca a un radio button como seleccionado
   */
   function check(element){
   document.getElementById(element).checked = true;
   }
   
   /**
   * quita la seleccion a un radio button
   */
   function uncheck(element){
   document.getElementById(element).checked = false;
   }
   
</script>