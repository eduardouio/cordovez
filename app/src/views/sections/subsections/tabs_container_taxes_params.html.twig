<!-- Tabs -->
<div>
   <ul class="nav nav-tabs" role="tablist" style="padding: 0px; font-size: 10px;">
      <li role="presentation">
         <a href="#parametros" role="tab" data-toggle="tab" aria-controls="parametros">
         <span class="fa fa-gears"></span> Par√°metros Impuestos
         </a>
      </li>
      <li role="presentation">
         <a href="#prorrateos" role="tab" data-toggle="tab" aria-controls="prorrateos">
         <span class="fa fa-list"></span> Prorrateos Pedido
         </a>
      </li>
      <li role="presentation" class="active" >
         <a href="#mayor" role="tab" data-toggle="tab" aria-controls="mayor">
         <span class="fa fa-money"></span> Cuadre con Mayor de Pedido
         </a>
      </li>
   </ul>
   <br>
   <div class="tab-content">
      <div role="tabpanel" id="parametros" class="tab-pane">
         {%  if init_data.order.regimen == '10'  %}
         {%  include 'forms/frm_params_taxesR10.html.twig'  %}
         {% else %}      	 
         {%  include 'forms/frm_params_taxes.html.twig'  %}
         {% endif %}
      </div>
      <div role="tabpanel" class="tab-pane" id="prorrateos">
         <div class="col-md-12"; padding:22px">
         {%  if init_data.order.regimen == '10'  %}
         {% set gastos_iniciales = 0.0 %}
         <table class="table table-condensed table-striped table-hover" style="font-size:10px">
            <thead>
               <tr>
                  <th>Item</th>
                  <th>Concepto</th>
                  <th>Tipo</th>
                  <th>Valor</th>
               </tr>
            </thead>
            <tbody>
               {% for prorrateo in init_data.init_expenses  %}
               {% set gastos_iniciales = gastos_iniciales +  prorrateo.valor_provisionado %}
               </tr>
               <td>{{ loop.index }}</td>
               <td>{{ prorrateo.concepto }}</td>
               {% if prorrateo.tipo == 'prorrateo' %}
               <td>PARCIAL</td>
               {% else %}
               <td>GASTO INICIAL</td>
               {% endif %}
               <td class = "text-right">{{ prorrateo.valor_provisionado }}</td>
               </tr>
               {% endfor  %}
               <tr style="background-color:#2E86C1; color:#fff; font-weight:bold;" class="text-right">
                  <td colspan="3">Prorrateo Gastos Iniciales</td>
                  <td>{{ gastos_iniciales | number_format('2',',','.') }}</td>
               </tr>
            </tbody>
         </table>
         {% else %}
         <table class="table table-condensed table-striped table-hover" style="font-size:10px">
            <thead>
               <tr>
                  <th>Item</th>
                  <th>Concepto</th>
                  <th>Tipo</th>
                  <th>Valor</th>
               </tr>
            </thead>
            <tbody>
               {% set gastos_parcial = 0  %}
               {% set gastos_iniciales = 0  %}
               {% set gastos_parcial = gastos_parcial +  warenhouses.almacenaje_aplicado %}
               <tr>
                  <td>1</td>
                  <td>BODEGAJE PARCIAL</td>
                  <td>GASTO PARCIAL</td>
                  <td class = "text-right">
                     {{ warenhouses.almacenaje_aplicado | number_format('2',',','.') }}
                  </td>
               </tr>
               {% for prorrateo in prorrateos.prorrateo_detail  %}
               </tr>
               {% if prorrateo.tipo == 'parcial' %}
               {% set gastos_parcial = gastos_parcial +  prorrateo.valor_prorrateado %}
               <td>{{ loop.index + 1 }}</td>
               <td>{{ prorrateo.concepto }}</td>
               <td>GASTO PARCIAL</td>
               <td class = "text-right">{{ prorrateo.valor_prorrateado | number_format('2',',','.')}}</td>
               </tr>
               {% endif %}
               {% endfor  %}
               <tr style="background-color:#2E86C1; color:#fff; font-weight:bold;" class="text-right">
                  <td colspan="3">Total Gastos Parciales</td>
                  <td>{{ gastos_parcial | number_format('2',',','.') }}</td>
               </tr>
            </tbody>
         </table>
         <table class="table table-condensed table-striped table-hover" style="font-size:10px">
            <thead>
               <tr>
                  <th>Item</th>
                  <th>Concepto</th>
                  <th>Tipo</th>
                  <th>Valor</th>
               </tr>
            </thead>
            <tbody>
               {% for prorrateo in prorrateos.prorrateo_detail  %}
               </tr>
               {% if prorrateo.tipo == 'gasto_inicial' %}
               {% set gastos_iniciales = gastos_iniciales +  prorrateo.valor_prorrateado %}
               <td>{{ loop.index }}</td>
               <td>{{ prorrateo.concepto }}</td>
               <td>GASTO INICIAL </td>
               <td class = "text-right">{{ prorrateo.valor_prorrateado | number_format('2',',','.')}}</td>
               </tr>
               {% endif %}
               {% endfor  %}
               <tr style="background-color:#2E86C1; color:#fff; font-weight:bold;" class="text-right">
                  <td colspan="3">Prorrateo Gastos Iniciales</td>
                  <td>{{ gastos_iniciales | number_format('2',',','.') }}</td>
               </tr>
            </tbody>
         </table>
         {% endif %} 
      </div>
   </div>
   <div role="mayor" id="mayor" class="tab-pane active">
   <div class="row">
   	<div class="col-md-3"><div class="text-primary">Cuadre Mayor: {{ mayor.cuadre.cuadre_mayor | number_format(3,',','.') }}</div></div>
   	<div class="col-md-3"><div class="text-primary">Provisiones: {{ mayor.cuadre.provisiones | number_format(3,',','.') }}</div></div>
   	<div class="col-md-3"><div class="text-primary">Facturado: {{ mayor.cuadre.facturado | number_format(3,',','.') }}</div></div>
   	<div class="col-md-3"><div class="text-primary">Saldo Sin Factura: {{ mayor.cuadre.saldo | number_format(3,',','.') }}</div></div>
   </div>
      <table class="table table-condensed table-striped table-hover" style="font-size:10px">
         <thead>
            <tr>
               <th>Concepto</th>
               <th>Inicial</th>
               <th>Fac Inicial</th>
               <th>Saldo In</th>
               <th>Distribuido</th>               
               <th>Por Distribuir</th>
            </tr>
         </thead>
         <tbody>     
         {% for mayor_detalle in mayor.mayor %}
            <tr>
            <td> {{ mayor_detalle.tipo | upper}} <small class="text-primary pull-right">$</small></td>
            <td class="text-right">{{ mayor_detalle.valor_inicial | number_format('2',',','.')}}</td>
            <td class="text-right">{{ mayor_detalle.valor_inicial_facturado | number_format('2',',','.')}}</td>
            <td class="text-right">{{ mayor_detalle.saldo_inicial_facturado | number_format('2',',','.')}}</td>
            <td class="text-right">{{ mayor_detalle.valor_distribuido | number_format('2',',','.')}}</td>
            <td class="text-right text-primary"><strong>{{ mayor_detalle.valor_por_distribuir | number_format('2',',','.')}}</strong></td>           
            </tr>
         {% endfor %}
            <tr style="background-color:#2E86C1; color:#fff; font-weight:bold;" class="text-right">
               <td colspan="1">Totales</td>
               <td>$ {{ mayor.sums.valor_inicial | number_format('2',',','.') }}</td>
               <td>$ {{ mayor.sums.valor_inicial_facturado | number_format('2',',','.') }}</td>
               <td>$ {{ mayor.sums.saldo_valor_inicial_facturado | number_format('2',',','.') }}</td>
               <td>$ {{ mayor.sums.valor_distribuido | number_format('2',',','.') }}</td>               
               <td>$ {{ mayor.sums.valor_por_distribuir | number_format('2',',','.') }}</td>
            </tr>
         </tbody>
      </table>     
   </div>
</div>
</div>
