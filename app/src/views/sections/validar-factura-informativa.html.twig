<div class="well well-sm">
   <div class="row">
      <div class="col-sm-3">
         <strong>Valor FOB:</strong> 
         <span class="text-primary">
         $ {{infoInvoice.valor | number_format(2, '.', ',') }}      
         </span>  
      </div>
      <div class="col-sm-2">
         <strong>
         Seguro:</strong> 
         <span class="text-primary">
         {{ infoInvoice.seguro_aduana | number_format(2, '.', ',')}}
         </span>
      </div>
      <div class="col-sm-2">
         <strong>
         Felete:</strong> 
         <span class="text-primary">
         <span>
         {{ infoInvoice.flete_aduana | number_format(2, '.', ',') }}
         </span>
         </span>
      </div>
      <div class="col-sm-2">
        <strong>CIF:</strong>
        <strong class="text-primary">{{ (infoInvoice.flete_aduana + infoInvoice.seguro_aduana + infoInvoice.valor) | number_format(2, '.', ',') }}</strong>
      </div>
      <div class="col-sm-3">
         <strong>
         Fecha Registro:</strong> 
         <span class="text-primary">
         {{ infoInvoice.date_create }}            
         </span>
      </div>
   </div>
   <div class="row">
      <div class="col-sm-3">
         <strong>Tiempo en Almacenera:</strong> 
         <span>{{ warenHouseDays | number_format(0)}}</span>
      </div>
      <div class="col-sm-2">
         <strong>P. Origen:</strong> 
         <span class="text-primary">
         {{ order.pais_origen }}
         </span>
      </div>
      <div class="col-sm-2">
         <strong>C Origen:</strong> 
         <span class="text-primary">
         {{ order.ciudad_origen  }}            
         </span>
      </div>
      <div class="col-sm-2">
         <strong>Incoterm:</strong> 
         <span class="text-primary">
         {{order.incoterm}}
         </span>         
      </div>
      <div class="col-sm-3">
         <strong>Creado Por:</strong> 
         {{infoInvoice.user.nombres}}
      </div>
   </div>
</div>
<div id="detalles">
   <div class="row">
      <div class="col-sm-7 div-bordered">
               <table  class="table table-hover table-condensed table-striped">
         <thead>
            <tr style="background-color: #333; color: #fff;">
               <div class="text-tittle">
                  RESUMEN DE ESTADO GASTOS NACIONALIZACIÃ“N FACTURA INFORMATIVA {{ infoInvoice.nro_factura_informativa }}
                  PARCIAL {{ partial | number_format(0)}} DEL PEDIDO     [{{order.nro_pedido}}]
               </div>
            </tr>
         </thead>
         <tbody>
            <tr style="background-color: #fff;">
               <th class="text-center">CONCEPTO</th>
               <th class="text-center">VALOR</th>
               <th class="text-center">ESTADO</th>
            </tr>            
            {% for expense in expenses  %}
            {% set sumExpenses = sumExpenses + expense.valor_provisionado %}
            <tr>
               <td>{{expense.concepto }}</td>
               {% if expense.concepto == 'GASTO ORIGEN' %}
                  {% if minimal.statusOrder.have_gasto_origen != false %}
                     <td>
                        {{expense.valor_provisionado}}
                     </td>
                     {% if expense.valor_provisionado > 0 %}
                        <td class="success">OK
                        <a href="{{rute_url}}gstnacionalizacion/editar/{{expense.id_gastos_nacionalizacion}}">
                     <span class="fa fa-pencil"></span> Editar
                     </a>
                        </td>
                        
                        {%else %}       
                        <td class="danger">                 
                        <a href="{{rute_url}}gstnacionalizacion/editar/{{expense.id_gastos_nacionalizacion}}">
                     Registrar                           
                        </a>
                        </td>

                     {% endif %}                  
                     
                     {% else %}
                     <td>No Requerido</td>
                     <td class="success">OK</td>
                  {% endif %}
               {% else %}
                  <td>{{expense.valor_provisionado}}</td>
                  {% if expense.valor_provisionado > 0 %}
                     <td class="success">
                     OK <a href="{{rute_url}}gstnacionalizacion/editar/{{expense.id_gastos_nacionalizacion}}">
                     <span class="fa fa-pencil"></span> Editar
                     </a>
                     </td>
                  {% else %}
                     <td class="danger">
                        <a href="{{rute_url}}gstnacionalizacion/editar/{{expense.id_gastos_nacionalizacion}}">
                     Registrar                           
                        </a>
                  </td>
                  {% endif %}
                  
               {% endif %}
            </tr>
            {% endfor %}
          <tr>
          <td> <strong>Total Facturas Provisiones Gastos Iniciales (DOLARES):</strong>
          <td>
          	<strong>
          	{{sumExpenses}}
          	</strong>
          </td>
          <td class="text-center">
          	---
          </td>
          </tr>
         </tbody>
      </table>
         {% include 'sections/subsections/table-order-info.html.twig' %}   
         <br><br><br><br><p>
         <a href="{{rute_url}}pedido/presentar/{{order.nro_pedido}}" class="btn btn-default btn-sm">
         <span class="fa fa-arrow-left fa-fw"></span>
         Volver Al Pedido [{{order.nro_pedido}}]
         </a>
      </p>
      </div>
      <div class="col-sm-5 div-bordered">
         {% include 'sections/subsections/table-rates-partial.html.twig' %}            
      </div>
   </div>  
</div>

   